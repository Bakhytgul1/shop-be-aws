{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "lib": ["ESNext", "es2020"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "lib",
    "resolveJsonModule": true,

    // "strict": true,
    // "esModuleInterop": true,
    // "skipLibCheck": true,
    // "forceConsistentCasingInFileNames": true,
    // "module": "commonjs",
  },
  "include": ["src/**/*.ts", "serverless.ts", "src/**/*.json"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
